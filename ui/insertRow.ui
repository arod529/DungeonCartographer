<interface>
  <object class="GtkAdjustment" id="adjustment_rowNum">
    <property name="lower">0</property>
    <property name="step_increment">1</property>
    <property name="page_increment">5</property>
  </object>
  <object class="GtkAdjustment" id="adjustment_count">
    <property name="lower">1</property>
    <property name="upper">100</property>
    <property name="value">1</property>
    <property name="step_increment">1</property>
    <property name="page_increment">5</property>
  </object>
    
  <object id="spinners" class="GtkBox">
    <property name="border_width">5</property>
    <property name="orientation">vertical</property>
    <property name="spacing">5</property>
    <child>
      <object class="GtkBox">
        <property name="spacing">5</property>
        <child>
          <object class="GtkLabel">
            <property name="label">Row Number:</property>
          </object>
        </child>
        <child>
          <object class="GtkSpinButton">
            <property name="tooltip_text">The row number to insert a new row at. Shifts this row and the following rows down.</property>
            <property name="adjustment">adjustment_rowNum</property>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="GtkBox">
        <property name="spacing">5</property>
        <child>
          <object class="GtkLabel">
            <property name="label">Row Count:</property>
          </object>
        </child>
        <child>
          <object class="GtkSpinButton">
            <property name="tooltip_text">The number of rows to insert starting at Row Number.</property>
            <property name="adjustment">adjustment_count</property>
          </object>
          <packing><property name="pack_type">end</property></packing>
        </child>
      </object>
    </child>
  </object>

</interface>
